{
  "compilerOptions": {
    "declaration": true,
    "lib": ["es2017"],
    "module": "commonjs",
    "target": "es6",
    "outDir": "dist",
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "useUnknownInCatchVariables": false,
    "types": [
      "node",
      "jest"
    ]
  },
  "include": ["actions", "bin", "commands", "lib"],
  "exclude": ["node_modules", "e2e"]
}
